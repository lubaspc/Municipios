<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Municipios.Vistas.AltaRiesgo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id DEl lugar"
               FontSize="40"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="ID" x:Name="IDA"></Entry>
            <Label Text="IGECEM del municipio"
               FontSize="40"
                HorizontalOptions="CenterAndExpand" />
                <Entry Placeholder="IGECEM" x:Name="IGECEMA"></Entry>

            <Label Text="Riesgo de la region"
               FontSize="40"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Riesgo" x:Name="RiesgoA"></Entry>
            <Button Text="Guardar" Clicked="Button_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>